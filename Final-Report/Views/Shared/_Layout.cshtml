<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/Content/Item/NavBar.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
    <div class="position-relative z-index-2">
        <div class="container" style="position: absolute; top: 0; left: 0; right: 0; z-index: 2;">
            @Html.Action("NavBar", "HomePage")
        </div>
        <div class="navbar-background">
            <video id="bg-video" autoplay muted loop>
                <source src="~/Assets/bgvid.mp4" type="video/mp4" />
            </video>
        </div>
    </div>
    <div class="container" style="padding-top:1000px">
        <div class="mb-3">
            @RenderBody()
        </div>
    </div>
    <div style="background-color: darkblue; margin-top: auto;">
        @Html.Action("FooterPartial", "HomePage")
    </div>
</body>

</html>
