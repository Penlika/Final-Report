@Styles.Render("~/Content/css")
<div>
    <div class="row" style="padding-top:50px">
        <div class="col-6">
            <a href="~/HomePage/Index" class="text-decoration-none">
                <h3 style="color: azure; font-weight: 700;">NT-Travel and Tourism</h3>
            </a>
        </div>
        <div>
            @if (Session["EMAIL"] != null)
            {
                var customer = (Final_Report.Models.CUSTOMER)Session["customer"];
                <div style="float: right">
                    @if (customer != null && customer.PICTURES != null)
                    {
                        <img src="@customer.PICTURES" style=" width: 40px;height: 40px;border-radius: 50%;object-fit: cover;" />
                    }
                    else
                    {
                        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" style=" width: 40px;height: 40px;border-radius: 50%;object-fit: cover;" />
                    }
                    <a class="dropdown-toggle btn" data-bs-toggle="dropdown" aria-expanded="false"
                       style="background-color: azure; color: darkblue; font-weight: 500">@customer.USERNAME</a>
                    <ul class="dropdown-menu text-light">
                        <li><a class="dropdown-item" href="@Url.Action("Profile","User")">Profile</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("BookingHistory","User")">Booking history</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout","User")">Log out</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div style="float:right">
                    <a class="btn" style="background-color:azure;color:darkblue;font-weight:500" href=@Url.Action("Register", "User")>Register</a>
                    <a class="btn" style="background-color:azure;color:darkblue;font-weight:500" href=@Url.Action("Login", "User")>Sign in</a>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <ul class="nav nav-pills">
            <li class="nav-item" style="padding-right:20px">
                <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkblue" href="@Url.Action("Stays","HomePage")">
                    <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">bed</i>   Stays
                </a>
            </li>
            <li class="nav-item" style="padding-right:20px">
                <a class="btn" style="font-weight: 300;border-radius:20px; color: azure; background-color: darkblue" href="@Url.Action("Flights","HomePage")">
                    <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">flight</i>   Flights
                </a>
            </li>
            <li class="nav-item">
                <a class="btn" style="font-weight: 300; border-radius: 20px; color: azure; background-color: darkblue" href="@Url.Action("Packages","HomePage")">
                    <i class="material-symbols-outlined" style="vertical-align:middle;font-size:30px">travel_explore</i>   Packages
                </a>
            </li>
        </ul>
    </div>
</div>
