<!--modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <!-- Add the 'modal-lg' class to make it larger -->
        <div class="modal-content">
            <div class="modal-header" style="background-color:darkblue">
                <h1 class="modal-title fs-5" id="exampleModalLabel">More Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Your larger content here -->
                <!-- You can add more content or adjust the size as needed -->
                <div class="carousel-container">
                    <div class="carousel">
                        <img src="https://via.placeholder.com/800x400" alt="Image 1">
                        <img src="https://via.placeholder.com/800x400" alt="Image 2">
                        <img src="https://via.placeholder.com/800x400" alt="Image 3">
                        <!-- Add more images as needed -->
                    </div>
                </div>

                <div class="preview-container">
                    <div class="preview" onclick="showImage(0)"><img src="https://via.placeholder.com/150x75" alt="Preview 1"></div>
                    <div class="preview" onclick="showImage(1)"><img src="https://via.placeholder.com/150x75" alt="Preview 2"></div>
                    <div class="preview" onclick="showImage(2)"><img src="https://via.placeholder.com/150x75" alt="Preview 3"></div>
                    <!-- Add more previews as needed -->
                </div>

                <script>
                    let currentIndex = 0;
                    const carousel = document.querySelector('.carousel');
                    const previews = document.querySelectorAll('.preview');

                    function showImage(index) {
                        currentIndex = index;
                        updateCarousel();
                    }

                    function updateCarousel() {
                        const translateValue = -currentIndex * 100 + '%';
                        carousel.style.transform = `translateX(${translateValue})`;

                        // Highlight the selected preview
                        previews.forEach((preview, index) => {
                            if (index === currentIndex) {
                                preview.style.border = '2px solid #333';
                            } else {
                                preview.style.border = '2px solid #ccc';
                            }
                        });
                    }
                </script>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
