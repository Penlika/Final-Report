@{
    ViewBag.Title = "ItemPage";
    Layout = "~/Views/Shared/ItemLayout.cshtml";
}
<style>
    .container {
        display: flex;
        align-items: flex-start; /* Align items at the top */
    }
    .left {
        flex: 1; /* Occupy 1/3 of the container width */
        background-color: #f0f0f0;
        padding: 10px;
    }

    .separator {
        width: 10px; /* Small gap between the two divs */
    }

    .right {
        flex: 2; /* Fill the rest of the container width (2/3) */
        background-color: #e0e0e0;
        padding: 10px;
    }
</style>
<div class="container">
    <div class="left">
        @Html.Action("SortItem", "HomePage")
    </div>
    <div class="separator"></div>
    <div class="right">
        @Html.Action("ListItem", "HomePage")
    </div>
</div>
