
@{
    ViewBag.Title = "VerifyMail2";
    Layout = "~/Views/Shared/SignLogLayout.cshtml";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
<div class="container" style="margin-bottom: 100px">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">OTP Verification</h3>
                    <p>@ViewBag.Mail</p>
                </div>

                <div class="card-body">
                    <form action="@Url.Action("VerifyMail2", "User")" method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputOTP" type="text" placeholder="Enter your OTP" name="otp" />
                            <label for="inputOTP">OTP</label>
                            <p class="text-danger">@ViewBag.Error</p>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary" type="submit">Verify</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>