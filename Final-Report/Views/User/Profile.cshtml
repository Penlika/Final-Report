@model Final_Report.Models.CUSTOMER

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/SignLogLayout.cshtml";
}

<script>
    function toggleReadOnly() {
        var inputs = document.querySelectorAll('.editable');
        inputs.forEach(function (input) {
            input.readOnly = !input.readOnly;
        });

        // Toggle the visibility of the Save Changes button
        var saveChangesBtn = document.getElementById('saveChangesBtn');
        saveChangesBtn.style.display = saveChangesBtn.style.display === 'none' ? 'block' : 'none';
    }
</script>

<style>
    .profile-label {
        font-weight: bold;
        margin-top: 10px;
    }

    .profile-input {
        width: 100%;
    }

    .btn-container {
        margin-top: 20px;
    }

    #saveChangesBtn {
        display: none;
        margin-top: 20px;
    }
</style>

<div class="container">
    <div class="row" style="padding-bottom: 50px">
        <div class="col-md-5">
            <div class="row">
                <div class="col-12 bg-white p-0 px-3 py-3 mb-3">
                    <div class="d-flex flex-column align-items-center">
                        <img class="photo" src="@Model.PICTURES" alt="">
                        <p class="fw-bold h4 mt-3">@Model.USERNAME</p>
                        <p class="text-muted">@Model.EMAIL</p>
                        <div class="d-flex btn-container">
                            <div class="btn btn-primary follow me-2">Follow</div>
                            <div class="btn btn-outline-primary message" onclick="toggleReadOnly()">Edit Profile</div>
                        </div>
                    </div>
                    <div class="col-12 bg-white p-0 px-2 pb-3 mb-3">
                        <div class="d-flex justify-content-between border-bottom py-2 px-3">
                            <p><span class="fab fa-twitter me-2"></span>Twitter</p>
                            <a href="">bootdey</a>
                        </div>
                        <div class="d-flex justify-content-between border-bottom py-2 px-3">
                            <p><span class="fab fa-instagram me-2"></span>Instagram</p>
                            <a href="">bootdey</a>
                        </div>
                        <div class="d-flex justify-content-between py-2 px-3">
                            <p><span class="fab fa-facebook-f me-2"></span>Facebook</p>
                            <a href="">bootdey</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7 ps-md-4">
            <div class="row">
                <div class="col-12 bg-white px-3 mb-3 pb-3">
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <label class="profile-label">Full Name</label>
                        <input class="editable profile-input" type="text" value="@Model.NAME" readonly />
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <label class="profile-label">Email</label>
                        <input class="editable profile-input" type="text" value="@Model.EMAIL" readonly />
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <label class="profile-label">Phone Number</label>
                        <input class="editable profile-input" type="text" value="@Model.PHONENUMBER" readonly />
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <label class="profile-label">Address</label>
                        <input class="editable profile-input" style="box-decoration-b" type="text" value="@Model.ADDRESS" readonly />
                    </div>
                    <button id="saveChangesBtn" type="submit" class="btn btn-primary mt-3">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
